        <li class="nav-item log-in-out-link"><a href="#" onclick={{action "logout"}}>Выйти</a></li>
        <li class="nav-item log-in-out-link"> Приветствую, <strong>{{currentUser.user.email}}</strong> </li>
      {{else}}
        <li class="nav-item"> {{#link-to "register" class="nav-link  text-info"}} Регистрация {{/link-to}}  </li>
