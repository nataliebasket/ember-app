<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">Создание спикера</h2>
    <form class="edit-form" onsubmit={{action "saveSpeaker"}}>
      <div class="form-group row">
        <label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
        <div class="col-sm-10">
          {{!-- <input type="text" value={{lastName}} oninput={{action "changeLastName" value="target.value"}} class="form-control form-control-lg" id="inputSurname" placeholder="Введите фамилию"> --}}
          {{input type="text" value=lastName class="form-control form-control-lg" id="inputSurname" placeholder="Введите фамилию"}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
        <div class="col-sm-10">
          {{input type="text" value=firstName class="form-control form-control-lg" id="inputName" placeholder="Введите имя"}}
          {{!-- <input type="text" class="form-control form-control-lg" id="inputName" placeholder="Введите имя"> --}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
        <div class="col-sm-10">
          {{input type="text" value=patronymic class="form-control form-control-lg" id="inputPatronymic" placeholder="Введите отчество"}}
          {{!-- <input type="text" class="form-control form-control-lg" id="inputPatronymic" placeholder="Введите отчество"> --}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
          <button onclick={{action "cancelSaveSpeaker"}} class="btn btn-outline-secondary btn-lg">Отмена</button>
        </div>
      </div>
    </form>
  </div>
</div>