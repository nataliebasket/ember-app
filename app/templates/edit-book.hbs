{{outlet}}
<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">Редактирование книги: {{model.name}}</h2>
    <form class="edit-form" onsubmit={{action "editBook"}}>
      <div class="form-group row">
        <label for="inputTitle" class="col-sm-2 col-form-label text-right">Название</label>
        <div class="col-sm-10">
          {{input type="text" value=model.name class="form-control form-control-lg" id="inputTitle" placeholder="Полное название книги"}}
          {{!-- <input type="text" class="form-control form-control-lg" id="inputTitle" placeholder="Полное название книги" > --}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputAuthor" class="col-sm-2 col-form-label text-right">Автор</label>
        <div class="col-sm-10">
          {{input type="text" value=model.author class="form-control form-control-lg" id="inputAuthor" placeholder="Фамилия И.О. автора"}}
          {{!-- <input type="text" class="form-control form-control-lg" id="inputAuthor" placeholder="Фамилия И.О. автора"> --}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">Объем</label>
        <div class="col-sm-10">
          {{input type="number" value=model.pages class="form-control form-control-lg" id="inputPagesCount" placeholder="Количество страниц книги"}}
          {{!-- <input type="number" class="form-control form-control-lg" id="inputPagesCount" placeholder="Количество страниц книги"> --}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">Описание</label>
        <div class="col-sm-10">
          {{input type="url" value=model.description_url class="form-control form-control-lg" id="inputDescriptionURL" placeholder="Ссылка на сайт с описанием книги"}}
          {{!-- <input type="url" class="form-control form-control-lg" id="inputDescriptionURL" placeholder="Ссылка на сайт с описанием книги"> --}}
        </div>
      </div>
      <div class="form-group row">
        <label for="customFile" class="col-sm-2 col-form-label text-right">Обложка</label>

        {{input-file class="input-group input-group-lg col-sm-10" uploadData=uploadData uploadDataChanged=(action "changeUploadData")}}

      </div>
      <div class="form-group row">
        <label for="inputTags" class="col-sm-2 col-form-label text-right">Теги</label>
        <div class="col-sm-10">
          {{input-tags tags=model.tags onChange=(action "changeTags")}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
          <button onclick={{action "cancelSaveBook"}} class="btn btn-outline-secondary btn-lg">Отмена</button>
        </div>
      </div>
    </form>
  </div>
</div>